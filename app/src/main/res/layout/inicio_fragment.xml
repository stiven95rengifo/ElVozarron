<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uniquindio.android.electiva.elvozarron.fragments.InicioFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo"
            tools:context="com.uniquindio.android.electiva.elvozarron.fragments.InicioFragment">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="3dp">

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cardview1"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"

                    android:layout_margin="6dp"
                    android:padding="8dp"
                    app:cardBackgroundColor="@color/vinotinto"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="9dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/idImagePortada"
                            android:layout_width="match_parent"
                            android:layout_height="195dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/imagen_entrenadores"
                            android:layout_above="@+id/textView"
                            android:layout_alignParentStart="true"
                            android:layout_marginBottom="32dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="@string/menu_entrenadores"
                            android:textAlignment="textEnd"
                            android:textColor="#ffffff"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cardview2"
                    android:layout_width="176dp"
                    android:layout_height="240dp"
                    android:layout_below="@id/cardview1"
                    android:layout_margin="6dp"
                    android:layout_marginRight="6dp"
                    android:padding="8dp"
                    app:cardBackgroundColor="@color/vinotinto"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="9dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="229dp">

                        <ImageView
                            android:id="@+id/idImagePortada1"
                            android:layout_width="match_parent"
                            android:layout_height="196dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/imagen_participantes"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginBottom="55dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="@string/menu_participantes"
                            android:textAlignment="textEnd"
                            android:textColor="#ffffff"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_marginBottom="23dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cardview3"
                    android:layout_width="176dp"
                    android:layout_height="240dp"
                    android:layout_below="@id/cardview1"
                    android:layout_margin="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_toRightOf="@id/cardview2"
                    android:padding="8dp"
                    app:cardBackgroundColor="@color/vinotinto"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="9dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="212dp">

                        <ImageView
                            android:id="@+id/idImagePortada2"
                            android:layout_width="match_parent"
                            android:layout_height="196dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/imagen_votacion"
                            android:layout_above="@+id/textView4"
                            android:layout_alignParentStart="true"
                            android:layout_marginBottom="34dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="@string/menu_votacion"
                            android:textAlignment="textEnd"
                            android:textColor="#ffffff"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginBottom="11dp" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </FrameLayout>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>
